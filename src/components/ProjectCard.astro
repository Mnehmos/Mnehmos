---
interface Props {
  title: string;
  description: string;
  type: 'mcp-server' | 'framework' | 'game' | 'app' | 'research';
  link: string;
  liveUrl?: string;
  tags: string[];
  stats?: {
    stars?: number;
    tools?: number;
    techniques?: number;
  };
  featured?: boolean;
  features?: ('rag' | 'mcp-tools' | 'ai-chat')[];
}

const { title, description, type, link, liveUrl, tags, stats, featured = false, features = [] } = Astro.props;

const typeColors = {
  'mcp-server': { bg: 'bg-copper/10', text: 'text-copper', label: 'MCP Server' },
  'framework': { bg: 'bg-emerald-100', text: 'text-emerald-700', label: 'Framework' },
  'game': { bg: 'bg-purple-100', text: 'text-purple-700', label: 'Game' },
  'app': { bg: 'bg-blue-100', text: 'text-blue-700', label: 'App' },
  'research': { bg: 'bg-amber-100', text: 'text-amber-700', label: 'Research' }
};

const featureLabels = {
  'rag': { bg: 'bg-violet-100', text: 'text-violet-700', label: 'ðŸ§  RAG' },
  'mcp-tools': { bg: 'bg-copper/10', text: 'text-copper', label: 'ðŸ”§ MCP Tools' },
  'ai-chat': { bg: 'bg-cyan-100', text: 'text-cyan-700', label: 'ðŸ’¬ AI Chat' }
};

const typeStyle = typeColors[type];
---

<div class={`project-card bg-white rounded-xl border ${featured ? 'border-copper/30' : 'border-stone-200'} p-6 h-full flex flex-col`}>
  <!-- Header -->
  <div class="flex items-start justify-between mb-4">
    <div class="flex flex-wrap gap-1.5">
      <span class={`inline-block px-2.5 py-1 ${typeStyle.bg} ${typeStyle.text} rounded-lg text-xs font-semibold`}>
        {typeStyle.label}
      </span>
      {features.map((feature) => (
        <span class={`inline-block px-2 py-1 ${featureLabels[feature].bg} ${featureLabels[feature].text} rounded-lg text-xs font-medium`}>
          {featureLabels[feature].label}
        </span>
      ))}
    </div>
    <div class="flex gap-2 shrink-0 ml-2">
      {liveUrl && (
        <a 
          href={liveUrl} 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-copper hover:text-copper-light transition-colors"
          title="View Live Site"
          onclick="event.stopPropagation();"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
          </svg>
        </a>
      )}
      <a 
        href={link} 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-stone-400 hover:text-stone-600 transition-colors"
        title="View GitHub"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>
    </div>
  </div>
  
  <!-- Title & Description -->
  <h3 class="font-display font-bold text-lg text-stone-900 mb-2">{title}</h3>
  <p class="text-stone-600 text-sm mb-4 line-clamp-2 flex-grow">{description}</p>
  
  <!-- Stats (if any) -->
  {stats && (
    <div class="flex gap-4 mb-4">
      {stats.stars && (
        <div class="flex items-center gap-1 text-sm text-stone-500">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z"/>
          </svg>
          <span>{stats.stars}</span>
        </div>
      )}
      {stats.tools && (
        <div class="flex items-center gap-1 text-sm text-stone-500">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <span>{stats.tools} tools</span>
        </div>
      )}
      {stats.techniques && (
        <div class="flex items-center gap-1 text-sm text-stone-500">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
          </svg>
          <span>{stats.techniques} techniques</span>
        </div>
      )}
    </div>
  )}
  
  <!-- Tags -->
  <div class="flex flex-wrap gap-1.5">
    {tags.slice(0, 4).map((tag) => (
      <span class="px-2 py-0.5 bg-stone-100 text-stone-600 rounded text-xs">
        {tag}
      </span>
    ))}
  </div>
  
  <!-- Live Site Button -->
  {liveUrl && (
    <a 
      href={liveUrl} 
      target="_blank" 
      rel="noopener noreferrer"
      class="mt-4 inline-flex items-center justify-center gap-2 w-full px-4 py-2 bg-copper text-white rounded-lg text-sm font-medium hover:bg-copper-light transition-colors"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
      </svg>
      View Live Site
    </a>
  )}
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
