  },
  {
    number: "528",
    label: "GitHub Stars",
    description: "Multi-Agent Framework",
    icon: `<path d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z"/>`,
  },
  {
    number: "182",
    label: "Techniques",
    description: "Prompt engineering",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>`,
  },
  {
    number: "145",
    label: "D&D 5e Tools",
    description: "RPG engine",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10l-2 1m0 0l-2-1m2 1v2.5M20 7l-2 1m2-1l-2-1m2 1v2.5M14 4l-2-1-2 1M4 7l2-1M4 7l2 1M4 7v2.5M12 21l-2-1m2 1l2-1m-2 1v-2.5M6 18l-2-1v-2.5M18 18l2-1v-2.5"/>`,
  },
  {
    number: "800+",
    label: "Passing Tests",
    description: "Game engine",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>`,
  },
  {
    number: "661",
    label: "Test Suites",
    description: "Trace MCP coverage",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>`,
  },
];
---

<section class="py-20 bg-stone-100 dark:bg-stone-900 transition-colors">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-12">
      <span
        class="inline-block px-3 py-1 bg-copper/10 text-copper rounded-full text-sm font-medium mb-4"
      >
        By The Numbers
      </span>
      <h2
        class="font-display text-3xl md:text-4xl font-bold text-stone-900 dark:text-stone-100"
      >
        Building at Scale
      </h2>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 gap-4 md:gap-6">
      {
        stats.map((stat, i) => (
          <div
            class={`bg-white dark:bg-stone-950 p-6 rounded-xl border border-stone-200 dark:border-stone-800 ${i === 0 ? "border-copper/30 dark:border-copper/30" : ""}`}
          >
            <div class="flex items-center gap-3 mb-3">
              <div
                class={`w-10 h-10 rounded-lg ${i === 0 ? "bg-copper/10" : "bg-stone-100 dark:bg-stone-800"} flex items-center justify-center`}
              >
                <svg
                  class={`w-5 h-5 ${i === 0 ? "text-copper" : "text-stone-600 dark:text-stone-400"}`}
                  fill={stat.icon.includes("fill") ? "currentColor" : "none"}
                  stroke={
                    stat.icon.includes("stroke") ? "currentColor" : "none"
                  }
                  viewBox="0 0 24 24"
                >
                  <Fragment set:html={stat.icon} />
                </svg>
              </div>
            </div>
            <div
              class={`font-display text-3xl font-bold ${i === 0 ? "text-copper" : "text-stone-900 dark:text-stone-100"}`}
            >
              {stat.number}
            </div>
            <div class="text-stone-800 dark:text-stone-200 font-medium">
              {stat.label}
            </div>
            <div class="text-stone-500 dark:text-stone-500 text-sm">
              {stat.description}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
