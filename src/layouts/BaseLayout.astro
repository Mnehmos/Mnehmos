---
interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "MCP Infrastructure Developer building tools that let AI agents interact with complex stateful systems‚Äîcomputer desktops, distributed workflows, and D&D campaigns. 300+ MCP tools across 7 servers.",
} = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Mnehmos</title>

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://mnehmos.github.io/Mnehmos/" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Schema.org Markup for Person -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Mnehmos",
        "jobTitle": "MCP Infrastructure Developer",
        "description": "Building tools that let AI agents interact with complex stateful systems",
        "url": "https://mnehmos.github.io/Mnehmos/",
        "sameAs": ["https://github.com/Mnehmos"],
        "knowsAbout": [
          "Model Context Protocol",
          "Multi-Agent Systems",
          "AI-Powered Games",
          "RAG Systems",
          "TypeScript",
          "Rust"
        ],
        "address": {
          "@type": "PostalAddress",
          "addressRegion": "Arizona",
          "addressCountry": "US"
        }
      }
    </script>
  </head>
  <body class="bg-stone-50 text-stone-800 antialiased">
    <!-- Navigation -->
    <nav
      class="fixed top-0 left-0 right-0 z-50 bg-stone-50/90 backdrop-blur-sm border-b border-stone-200"
    >
      <div
        class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between"
      >
        <a
          href={base}
          class="flex items-center gap-3 font-display font-bold text-xl text-stone-900 hover:text-copper transition-colors group"
        >
          <!-- Gear Logo SVG -->
          <svg
            class="w-8 h-8 header-logo"
            viewBox="0 0 32 32"
            xmlns="http://www.w3.org/2000/svg"
          >
            <defs>
              <linearGradient
                id="headerCopperGrad"
                x1="0%"
                y1="0%"
                x2="100%"
                y2="100%"
              >
                <stop offset="0%" style="stop-color:#D4956A"></stop>
                <stop offset="100%" style="stop-color:#B87333"></stop>
              </linearGradient>
              <filter id="headerGlow">
                <feGaussianBlur stdDeviation="0.5" result="coloredBlur"
                ></feGaussianBlur>
                <feMerge>
                  <feMergeNode in="coloredBlur"></feMergeNode>
                  <feMergeNode in="SourceGraphic"></feMergeNode>
                </feMerge>
              </filter>
            </defs>
            <rect width="32" height="32" rx="6" fill="#0C0A09"></rect>
            <!-- Gear teeth outer -->
            <g class="logo-gear" transform="translate(16,16)">
              <path
                d="M0,-10 L2,-10 L2.5,-7 L4,-7.5 L5.5,-9.5 L7,-8 L5.5,-6 L6.5,-4.5 L9.5,-5 L10,-3 L7.5,-2 L7.5,0 L10,0 L10,2 L7.5,2 L7.5,4 L9.5,5 L9,7 L6.5,5.5 L5,7 L6.5,9 L5,10 L3.5,7.5 L2,8 L2,10 L0,10 L0,7.5 L-2,8 L-2.5,10 L-4.5,9.5 L-3.5,7 L-5.5,6 L-7,8 L-8.5,6.5 L-6.5,4.5 L-7.5,2.5 L-10,3 L-10,0 L-7.5,0 L-7.5,-2 L-10,-2.5 L-9.5,-4.5 L-6.5,-4 L-5.5,-6 L-7,-8 L-5,-9.5 L-3.5,-7 L-2,-7.5 L-2,-10 Z"
                fill="url(#headerCopperGrad)"
                class="logo-gear-outer"></path>
            </g>
            <!-- Inner circle -->
            <circle cx="16" cy="16" r="4" fill="#0C0A09" class="logo-gear-inner"
            ></circle>
            <!-- Center dot -->
            <circle
              cx="16"
              cy="16"
              r="2"
              fill="#FCD34D"
              opacity="0.9"
              filter="url(#headerGlow)"
              class="logo-center"></circle>
            <!-- Connection dots -->
            <circle
              cx="6"
              cy="6"
              r="2"
              fill="url(#headerCopperGrad)"
              opacity="0.7"
              class="logo-node logo-node-1"></circle>
            <circle
              cx="26"
              cy="6"
              r="2"
              fill="url(#headerCopperGrad)"
              opacity="0.7"
              class="logo-node logo-node-2"></circle>
            <circle
              cx="26"
              cy="26"
              r="2"
              fill="url(#headerCopperGrad)"
              opacity="0.7"
              class="logo-node logo-node-3"></circle>
          </svg>
          <span>Mnehmos</span>
        </a>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center gap-8">
          <a
            href={`${base}#projects`}
            class="text-stone-600 hover:text-stone-900 transition-colors"
            >Projects</a
          >
          <a
            href={`${base}projects`}
            class="text-stone-600 hover:text-stone-900 transition-colors"
            >All Projects</a
          >

          <a
            href={`${base}contact`}
            class="text-stone-600 hover:text-stone-900 transition-colors"
            >Contact</a
          >
        </div>

        <a
          href="https://github.com/Mnehmos"
          target="_blank"
          rel="noopener noreferrer"
          class="hidden md:inline-flex items-center gap-2 bg-stone-900 text-stone-50 px-4 py-2 rounded-lg font-medium hover:bg-stone-800 transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
          GitHub
        </a>

        <!-- Mobile menu button -->
        <button id="mobile-menu-btn" class="md:hidden p-2 text-stone-600">
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>

      <!-- Mobile menu -->
      <div
        id="mobile-menu"
        class="hidden md:hidden border-t border-stone-200 bg-stone-50"
      >
        <div class="px-6 py-4 space-y-4">
          <a
            href={`${base}#projects`}
            class="block text-stone-600 hover:text-stone-900">Projects</a
          >
          <a
            href={`${base}projects`}
            class="block text-stone-600 hover:text-stone-900">All Projects</a
          >

          <a
            href={`${base}contact`}
            class="block text-stone-600 hover:text-stone-900">Contact</a
          >
          <a
            href="https://github.com/Mnehmos"
            target="_blank"
            rel="noopener noreferrer"
            class="block bg-stone-900 text-stone-50 px-4 py-2 rounded-lg font-medium text-center"
          >
            GitHub
          </a>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-20">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-stone-900 text-stone-300 py-16 mt-24">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid md:grid-cols-4 gap-12">
          <div class="md:col-span-2">
            <span class="font-display font-bold text-2xl text-stone-50"
              >Mnehmos</span
            >
            <p class="mt-4 text-stone-400 max-w-md">
              Building infrastructure for AI agents that interact with the real
              world. MCP servers, multi-agent frameworks, and AI-powered games.
            </p>
            <p class="mt-4 text-stone-500 text-sm">üìç Arizona, USA</p>
          </div>
          <div>
            <h4 class="font-semibold text-stone-50 mb-4">Ecosystem</h4>
            <ul class="space-y-2 text-stone-400">
              <li>
                <a
                  href="https://github.com/Mnehmos/mnehmos.multi-agent.framework"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-stone-200 transition-colors"
                  >Multi-Agent Framework</a>
              </li>
              <li>
                <a
                  href="https://github.com/Mnehmos/mnehmos.ooda.mcp"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-stone-200 transition-colors">OODA MCP</a>
              </li>
              <li>
                <a
                  href="https://github.com/Mnehmos/mnehmos.index-foundry.mcp"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-stone-200 transition-colors"
                  >Index Foundry</a>
              </li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold text-stone-50 mb-4">Connect</h4>
            <ul class="space-y-2 text-stone-400">
              <li>
                <a
                  href="https://github.com/Mnehmos"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-stone-200 transition-colors">GitHub</a>
              </li>

              <li>
                <a
                  href={`${base}contact`}
                  class="hover:text-stone-200 transition-colors"
                  >Contact / Schedule</a>
              </li>
              <li>
                <a
                  href="mailto:Mnehmos@gmail.com"
                  class="hover:text-stone-200 transition-colors"
                  >Mnehmos@gmail.com</a>
              </li>
            </ul>
          </div>
        </div>
        <div
          class="mt-12 pt-8 border-t border-stone-800 text-stone-500 text-sm"
        >
          <p>¬© {new Date().getFullYear()} Mnehmos. Arizona, USA.</p>
        </div>
      </div>
    </footer>

    <!-- Mobile Menu Script -->
    <script>
      const menuBtn = document.getElementById("mobile-menu-btn");
      const mobileMenu = document.getElementById("mobile-menu");
      menuBtn?.addEventListener("click", () => {
        mobileMenu?.classList.toggle("hidden");
      });
    </script>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
