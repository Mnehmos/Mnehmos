---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const base = import.meta.env.BASE_URL;

const posts = (await getCollection("blog", ({ data }) => !data.draft)).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout
  title="Blog"
  description="Thoughts on MCP development, multi-agent systems, and building AI-powered applications."
>
  <section class="py-20">
    <div class="max-w-4xl mx-auto px-6">
      <!-- Header -->
      <div class="text-center mb-16">
        <span
          class="inline-block px-3 py-1 bg-copper/10 text-copper rounded-full text-sm font-medium mb-4"
        >
          Blog
        </span>
        <h1
          class="font-display text-4xl md:text-5xl font-bold text-stone-900 mb-4"
        >
          Thoughts & Updates
        </h1>
        <p class="text-lg text-stone-600 max-w-2xl mx-auto">
          MCP development patterns, multi-agent coordination, and building in
          public.
        </p>
      </div>

      <!-- Posts List -->
      {
        posts.length === 0 ? (
          <p class="text-center text-stone-500">
            No posts yet. Check back soon!
          </p>
        ) : (
          <div class="space-y-8">
            {posts.map((post) => (
              <article class="group">
                <a
                  href={`${base}blog/${post.slug}`}
                  class="block p-6 bg-white rounded-xl border border-stone-200 hover:border-copper/50 hover:shadow-md transition-all"
                >
                  <div class="flex flex-wrap gap-2 mb-3">
                    {post.data.tags.map((tag) => (
                      <span class="px-2 py-0.5 bg-stone-100 text-stone-600 text-xs rounded-full">
                        {tag}
                      </span>
                    ))}
                  </div>
                  <h2 class="font-display text-xl font-bold text-stone-900 group-hover:text-copper transition-colors mb-2">
                    {post.data.title}
                  </h2>
                  <p class="text-stone-600 mb-3">{post.data.description}</p>
                  <time
                    class="text-sm text-stone-500"
                    datetime={post.data.pubDate.toISOString()}
                  >
                    {post.data.pubDate.toLocaleDateString("en-US", {
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                    })}
                  </time>
                </a>
              </article>
            ))}
          </div>
        )
      }
    </div>
  </section>
</BaseLayout>
