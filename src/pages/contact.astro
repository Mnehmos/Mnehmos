---
import BaseLayout from '../layouts/BaseLayout.astro';

const email = "Mnehmos@gmail.com";
---

<BaseLayout title="Contact">
  <section class="py-20">
    <div class="max-w-4xl mx-auto px-6">
      <div class="text-center mb-12">
        <span class="inline-block px-3 py-1 bg-copper/10 text-copper rounded-full text-sm font-medium mb-4">
          Get in Touch
        </span>
        <h1 class="font-display text-4xl md:text-5xl font-bold text-stone-900">
          Contact
        </h1>
        <p class="mt-4 text-lg text-stone-600 max-w-2xl mx-auto">
          Interested in collaboration, consulting, or just want to chat about AI infrastructure and MCP servers?
        </p>
      </div>
      
      <!-- Contact Options -->
      <div class="grid md:grid-cols-2 gap-8 mb-16">
        <!-- Email Card -->
        <div class="bg-white rounded-xl border border-stone-200 p-8 text-center">
          <div class="w-16 h-16 bg-copper/10 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-copper" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <h2 class="font-display text-xl font-bold text-stone-900 mb-2">Email</h2>
          <p class="text-stone-600 mb-4">For general inquiries, project discussions, or consulting requests.</p>
          <a 
            href={`mailto:${email}`}
            class="inline-flex items-center gap-2 text-copper hover:text-copper-light font-medium transition-colors"
          >
            {email}
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
          </a>
        </div>
        
        <!-- Schedule Card -->
        <div class="bg-white rounded-xl border border-stone-200 p-8 text-center">
          <div class="w-16 h-16 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-emerald-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <h2 class="font-display text-xl font-bold text-stone-900 mb-2">Schedule a Call</h2>
          <p class="text-stone-600 mb-4">Book a time for a video call to discuss projects or opportunities.</p>
          <a 
            href="#calendly-container"
            class="inline-flex items-center gap-2 text-emerald-700 hover:text-emerald-600 font-medium transition-colors"
          >
            Open Calendar
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Calendly Embed -->
      <div id="calendly-container" class="bg-white rounded-xl border border-stone-200 overflow-hidden">
        <div class="p-4 border-b border-stone-200 flex items-center justify-between">
          <h3 class="font-display font-bold text-stone-900">Schedule a Meeting</h3>
          <span class="text-sm text-stone-500">Select a time that works for you</span>
        </div>
        <div 
          class="calendly-inline-widget" 
          data-url="https://calendly.com/mnehmos"
          style="min-width:320px;height:700px;"
        ></div>
      </div>
      
      <!-- GitHub Link -->
      <div class="mt-12 text-center">
        <p class="text-stone-600 mb-4">You can also reach me through GitHub:</p>
        <a 
          href="https://github.com/Mnehmos"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-stone-900 text-white px-6 py-3 rounded-lg font-semibold hover:bg-stone-800 transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          @Mnehmos on GitHub
        </a>
      </div>
    </div>
  </section>
  
  <!-- Calendly Widget Script -->
  <script is:inline src="https://assets.calendly.com/assets/external/widget.js" async></script>
</BaseLayout>
